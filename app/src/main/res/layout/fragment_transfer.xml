<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.fragments.transfer.TransferFragment">

        <View
            android:id="@+id/view_box_transfer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_16sdp"
            android:background="@drawable/bg_rounded_white_box"
            app:layout_constraintBottom_toBottomOf="@+id/gl_transfer_40"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_transfer_title" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/colorLayoutBackground"
            app:layout_constraintEnd_toEndOf="@+id/view_box_transfer"
            app:layout_constraintStart_toStartOf="@+id/view_box_transfer"
            app:layout_constraintTop_toTopOf="@+id/gl_transfer_20" />

        <View
            android:id="@+id/view_box_transfer_amount"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_16sdp"
            android:background="@drawable/bg_rounded_white_box"
            app:layout_constraintBottom_toTopOf="@+id/gl_transfer_60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gl_transfer_40" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_transfer_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@android:color/white"
            android:fontFamily="@font/avenir_light"
            android:hint="@string/hint_transfer_amount"
            android:paddingTop="@dimen/_8sdp"
            android:inputType="numberDecimal"
            android:maxLength="6"
            app:layout_constraintEnd_toEndOf="@id/view_box_transfer_amount"
            app:layout_constraintStart_toStartOf="@id/view_box_transfer_amount"
            app:layout_constraintTop_toBottomOf="@+id/tv_transfer_amount" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_transfer_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:fontFamily="@font/avenir_light"
            android:padding="@dimen/_12sdp"
            android:text="@string/label_transfer_title"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_transfer_from_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16sdp"
            android:fontFamily="@font/avenir_roman"
            android:text="@string/label_transfer_from"
            android:textColor="@color/colorTextColor"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="@+id/view_box_transfer"
            app:layout_constraintTop_toTopOf="@+id/view_box_transfer" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_transfer_from_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:fontFamily="@font/avenir_light"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:text="@string/label_transfer_from_account"
            android:textColor="@color/colorTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/view_box_transfer"
            app:layout_constraintTop_toBottomOf="@+id/tv_transfer_from_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_transfer_to_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16sdp"
            android:fontFamily="@font/avenir_roman"
            android:text="@string/label_transfer_to"
            android:textColor="@color/colorTextColor"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="@+id/view_box_transfer"
            app:layout_constraintTop_toTopOf="@+id/gl_transfer_20" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_transfer_to_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:fontFamily="@font/avenir_light"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:text="@string/label_transfer_from_account"
            android:textColor="@color/colorTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/view_box_transfer"
            app:layout_constraintTop_toBottomOf="@+id/tv_transfer_to_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_transfer_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/avenir_roman"
            android:text="@string/label_transfer_amount"
            android:textColor="@color/colorTextColor"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintEnd_toEndOf="@+id/view_box_transfer_amount"
            app:layout_constraintStart_toStartOf="@+id/view_box_transfer_amount"
            app:layout_constraintTop_toTopOf="@+id/view_box_transfer_amount" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_transfer_continue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/bg_rounded_button"
            android:fontFamily="@font/avenir_heavy"
            android:gravity="center"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:text="@string/label_confirm_account_submit"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_transfer_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_transfer_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.43" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_transfer_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.63" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_sheet"
        android:background="@android:color/white"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_transfer_choose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_heavy"
            android:padding="@dimen/_8sdp"
            android:text="@string/label_transfer_choose"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_transfer_chequing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Chequing -- (5432)"
            android:textAllCaps="true"
            android:fontFamily="@font/avenir_heavy"
            android:paddingStart="@dimen/_16sdp"
            android:paddingTop="@dimen/_16sdp"
            android:paddingBottom="@dimen/_16sdp"
            android:gravity="center_vertical"
            android:textColor="@color/colorTextColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_transfer_choose"/>

        <View
            android:id="@+id/view_divider_chequing"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_transfer_chequing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorGreyText"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_transfer_savings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Savings -- (5432)"
            android:textAllCaps="true"
            android:fontFamily="@font/avenir_heavy"
            android:paddingStart="@dimen/_16sdp"
            android:paddingTop="@dimen/_16sdp"
            android:paddingBottom="@dimen/_16sdp"
            android:gravity="center_vertical"
            android:textColor="@color/colorTextColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_divider_chequing"/>

        <View
            android:id="@+id/view_divider_savings"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_transfer_savings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorGreyText"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_transfer_credit_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Credit card -- (5432)"
            android:textAllCaps="true"
            android:fontFamily="@font/avenir_heavy"
            android:paddingStart="@dimen/_16sdp"
            android:paddingTop="@dimen/_16sdp"
            android:paddingBottom="@dimen/_16sdp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:textColor="@color/colorTextColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_divider_savings"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>