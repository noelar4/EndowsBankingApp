<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragments.addaccount.AddContactFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/_4sdp"
        app:contentPadding="@dimen/_8sdp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/_20sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_add_contact_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:textColor="@color/colorTextColor"
                android:fontFamily="@font/avenir_roman"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/label_add_contact_name"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_add_contact_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:fontFamily="@font/avenir_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_add_contact_name"
                android:hint="@string/hint_add_contact_name"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/img_interac_logo"
                app:layout_constraintEnd_toEndOf="@+id/edt_add_contact_name"
                app:layout_constraintTop_toTopOf="@+id/tv_add_contact_name"
                app:layout_constraintBottom_toBottomOf="@+id/edt_add_contact_name"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_add_contact_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:textColor="@color/colorTextColor"
                android:fontFamily="@font/avenir_roman"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_add_contact_name"
                android:text="@string/label_add_contact_email"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_add_contact_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:fontFamily="@font/avenir_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_add_contact_email"
                android:hint="@string/hint_add_contact_email"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_add_contact_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/bg_rounded_blue_color_border_box"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/avenir_heavy"
                android:textSize="@dimen/_14sdp"
                android:paddingTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="@string/label_confirm_account_cancel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_add_contact_continue"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_add_contact_continue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/bg_rounded_button"
                android:textColor="@android:color/white"
                android:fontFamily="@font/avenir_heavy"
                android:textSize="@dimen/_14sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="@string/label_confirm_account_submit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_add_contact_cancel"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>