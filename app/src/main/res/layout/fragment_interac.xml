<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_box_interac"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_16sdp"
        android:background="@drawable/bg_rounded_white_box"
        app:layout_constraintBottom_toBottomOf="@+id/gl_interac_40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_interac_title" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorLayoutBackground"
        app:layout_constraintEnd_toEndOf="@+id/view_box_interac"
        app:layout_constraintStart_toStartOf="@+id/view_box_interac"
        app:layout_constraintTop_toTopOf="@+id/gl_interac_20" />

    <View
        android:id="@+id/view_box_interac_amount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_16sdp"
        android:background="@drawable/bg_rounded_white_box"
        app:layout_constraintBottom_toTopOf="@+id/gl_interac_60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gl_interac_40" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_interac_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@android:color/white"
        android:fontFamily="@font/avenir_light"
        android:hint="@string/hint_transfer_amount"
        android:paddingTop="@dimen/_8sdp"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@id/view_box_interac_amount"
        app:layout_constraintStart_toStartOf="@id/view_box_interac_amount"
        app:layout_constraintTop_toBottomOf="@+id/tv_interac_amount" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_interac_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:drawableEnd="@drawable/img_interac"
        android:fontFamily="@font/avenir_light"
        android:padding="@dimen/_12sdp"
        android:text="@string/label_interac_title"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_interac_from_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp"
        android:fontFamily="@font/avenir_roman"
        android:text="@string/label_transfer_from"
        android:textColor="@color/colorTextColor"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintStart_toStartOf="@+id/view_box_interac"
        app:layout_constraintTop_toTopOf="@+id/view_box_interac" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_interac_from_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:fontFamily="@font/avenir_light"
        android:text="@string/label_transfer_from_account"
        android:textColor="@color/colorTextColor"
        app:layout_constraintStart_toStartOf="@+id/view_box_interac"
        app:layout_constraintTop_toBottomOf="@+id/tv_interac_from_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_interac_to_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp"
        android:fontFamily="@font/avenir_roman"
        android:text="@string/label_transfer_to"
        android:textColor="@color/colorTextColor"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintStart_toStartOf="@+id/view_box_interac"
        app:layout_constraintTop_toTopOf="@+id/gl_interac_20" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_interac_to_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:fontFamily="@font/avenir_light"
        android:text="@string/label_transfer_from_account"
        android:textColor="@color/colorTextColor"
        app:layout_constraintStart_toStartOf="@+id/view_box_interac"
        app:layout_constraintTop_toBottomOf="@+id/tv_interac_to_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_interac_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:fontFamily="@font/avenir_roman"
        android:text="@string/label_transfer_amount"
        android:textColor="@color/colorTextColor"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toEndOf="@+id/view_box_interac_amount"
        app:layout_constraintStart_toStartOf="@+id/view_box_interac_amount"
        app:layout_constraintTop_toTopOf="@+id/view_box_interac_amount" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_interac_continue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/bg_rounded_button"
        android:fontFamily="@font/avenir_heavy"
        android:gravity="center"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:text="@string/label_confirm_account_submit"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_interac_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_interac_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.43" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_interac_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

</androidx.constraintlayout.widget.ConstraintLayout>